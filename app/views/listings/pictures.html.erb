<h1 class="page-heading">All Pictures <small><%= @listing.title %></small> </h1>
<div class="row">
<div class='form-group'>
<div class="col-md-12">
<%=link_to 'New', new_listing_picture_path(@listing), {class: 'btn btn-primary btn-md'}
%>
</div> </div>
<br/>
<div class="row">
<div class="col-md-12">
<% if @pictures.length == 0 %>
<p class="lead">No pictures found </p> <% else %>
<table class="table table-bordered table-striped table-responsive">
<%=link_to 'Gallery', gallery_path(@listing), {class: 'btn btn-primary btn-md'} %> </div>
<thead> <tr>
<td>Title</td> <td></td> </tr>
</thead> <tbody>
<% @pictures.each do |picture| %> <tr>
<td><%= picture.title %> </td>
<td><%= link_to 'Delete', [@listing, picture], method: :delete, data: {confirm: 'Are you sure?'} %> </td>
</tr>
<% end %> </tbody>
</table>
<% end %>
</div>
</div>
<div class="row">
<div class="col-md-12">
<%= link_to 'Back', listings_path %> </div>
</div>